<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.teicm.fiveandone.StartMenuActivity">

    <ImageView
        android:id="@+id/drawable"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"
        android:gravity="center" />

    <RelativeLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="20dp"
        android:elevation="4dp"
        android:background="@drawable/round_corner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/drawable"
        android:layout_marginTop="61dp"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/btnGroup"
            android:paddingTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnPlay"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_margin="8dp"
                android:background="#ff1a75"
                android:text="PLAY"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnScore"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_margin="8dp"
                android:background="#6699ff"
                android:text="SCORE"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/user"
        android:id="@+id/btnUser"
        android:background="@color/backgroundPage"
        android:layout_alignTop="@+id/btnAbout"
        android:layout_toEndOf="@+id/btnAbout"
        android:layout_marginStart="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/gift"
        android:id="@+id/btnGift"
        android:background="@color/backgroundPage"
        android:layout_alignTop="@+id/btnUser"
        android:layout_toEndOf="@+id/btnUser"
        android:layout_marginStart="14dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/settings"
        android:id="@+id/btnSettings"
        android:layout_marginBottom="42dp"
        android:background="@color/backgroundPage"
        android:layout_marginStart="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/drawable" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/about"
        android:id="@+id/btnAbout"
        android:background="@color/backgroundPage"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@+id/btnSettings"
        android:layout_toEndOf="@+id/btnSettings" />

</RelativeLayout>